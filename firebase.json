{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": [
    {
      "target": "website", 
      "public": "website/docs",
      "rewrites": [
        {
          "source": "/api/**",
          "function": "mainnetMetadata"
        },
        {
          "source": "/testnetapi/**",
          "function": "testnetMetadata"
        },
        {
          "source": "/integrations/avatar",
          "function": "setAvatarOfValidtor"
        }
      ]
    },
    {
      "target": "minter", 
      "public": "minter/build"
    },
    {
      "target": "viewer", 
      "public": "viewer/build"
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
